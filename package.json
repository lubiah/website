{
	"name": "kudadam.com",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev --host",
		"build": "vite build",
		"preview": "vite preview",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"devDependencies": {
		"@lubiah/rehype-escape-code": "^0.0.3",
		"@playwright/test": "^1.37.0",
		"@poppanator/sveltekit-svg": "^4.1.0",
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/kit": "^1.22.5",
		"@sveltinio/remark-headings": "^1.0.3",
		"@tailwindcss/forms": "^0.5.4",
		"@types/simplecrawler": "^1.1.2",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"eslint": "^8.47.0",
		"eslint-config-prettier": "^8.10.0",
		"eslint-plugin-svelte": "^2.32.4",
		"lint-staged": "^13.2.3",
		"mdsvex": "^0.11.0",
		"mdsvex-reading-time": "^1.0.1",
		"postcss": "^8.4.27",
		"postcss-load-config": "^4.0.1",
		"postcss-preset-env": "^9.1.1",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"rehype-highlighter": "0.0.1-beta",
		"rehype-slug": "^5.1.0",
		"remark-breaks": "^3.0.3",
		"remark-directive": "^2.0.1",
		"remark-emoji": "^3.1.2",
		"remark-frontmatter": "^4.0.1",
		"remark-gfm": "^3.0.1",
		"remark-parse": "^10.0.2",
		"simplecrawler": "^1.1.9",
		"svelte": "^4.2.0",
		"svelte-check": "^3.5.0",
		"svelte-seo": "^1.5.3",
		"tailwindcss": "^3.3.3",
		"tslib": "^2.6.1",
		"typescript": "^5.1.6",
		"unist-util-remove": "^4.0.0",
		"unist-util-visit": "^5.0.0",
		"vite": "^4.4.9",
		"vitest": "^0.32.4"
	},
	"type": "module",
	"lint-staged": {
		"*.{js,ts,svelte}": "eslint --fix",
		"*.{js,ts,svelte,css,md}": "prettier --write"
	},
	"pnpm": {
		"patchedDependencies": {
			"mdsvex@0.11.0": "patches/mdsvex@0.11.0.patch"
		}
	}
}
